name: Instalar Dependências e Testar

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout
      uses: actions/checkout@v4

    - name: Use Node.js
      uses: actions/setup-node@v5
      with:
        node-version: '20'

    - name: Instalar Dependências
      run: npm ci

    - name: Rodar Testes
      run: npm test
